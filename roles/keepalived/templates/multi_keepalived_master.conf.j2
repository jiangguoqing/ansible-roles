! Configuration File for keepalived

global_defs {
   notification_email {
     root@localhost
   }
   notification_email_from haadmin@buhui.com
   smtp_server 127.0.0.1
   smtp_connect_timeout 30
   router_id node1
   vrrp_mcast_group4 {{ m_cast }}
   script_user root
   enable_script_security
}

vrrp_script chk_down {
    script "/etc/keepalived/keep_down.sh"
    interval 3
}

vrrp_instance VI_1 {
    state MASTER
    interface {{ INTERFACE }} 
    virtual_router_id 51
    priority 100
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass 1111
    }
    virtual_ipaddress {
        {{ m_m_vip }} dev {{ INTERFACE }} label {{ INTERFACE }}:0
    }
    # 调用vrrp_script定义的脚本
    track_script {
        chk_down
    }
}

vrrp_instance VI_2 {
    state BACKUP
    interface {{ INTERFACE }}
    virtual_router_id 52
    priority 98
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass 1111
    }
    virtual_ipaddress {
        {{ m_b_vip }} dev {{ INTERFACE }} label {{ INTERFACE }}:1
    }
    # 调用vrrp_script定义的脚本
    track_script {
        chk_down
    }
}
